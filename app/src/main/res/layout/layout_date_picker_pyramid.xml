<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <com.loper7.date_time_picker.number_picker.NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="np_datetime_year"
        app:internalLayout="@layout/number_picker_with_selector_wheel"
        app:internalMaxHeight="120dp"
        app:internalMinWidth="60dp"
        app:selectionDivider="#E5E5E5"
        app:selectionDividerHeight="1dp"
        app:solidColor="#00000000"
        app:virtualButtonPressedDrawable="#00000000" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.loper7.date_time_picker.number_picker.NumberPicker
            android:id="@+id/np_datetime_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="np_datetime_month"
            app:internalLayout="@layout/number_picker_with_selector_wheel"
            app:internalMaxHeight="120dp"
            app:internalMinWidth="60dp"
            app:selectionDivider="#E5E5E5"
            app:selectionDividerHeight="1dp"
            app:solidColor="#00000000"
            app:virtualButtonPressedDrawable="#00000000" />


        <com.loper7.date_time_picker.number_picker.NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:tag="np_datetime_day"
            app:internalLayout="@layout/number_picker_with_selector_wheel"
            app:internalMaxHeight="120dp"
            app:internalMinWidth="60dp"
            app:selectionDivider="#E5E5E5"
            app:selectionDividerHeight="1dp"
            app:solidColor="#00000000"
            app:virtualButtonPressedDrawable="#00000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.loper7.date_time_picker.number_picker.NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="np_datetime_hour"
            app:internalLayout="@layout/number_picker_with_selector_wheel"
            app:internalMaxHeight="120dp"
            app:internalMinWidth="60dp"
            app:selectionDivider="#E5E5E5"
            app:selectionDividerHeight="1dp"
            app:solidColor="#00000000"
            app:virtualButtonPressedDrawable="#00000000" />


        <com.loper7.date_time_picker.number_picker.NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:tag="np_datetime_minute"
            app:internalLayout="@layout/number_picker_with_selector_wheel"
            app:internalMaxHeight="120dp"
            app:internalMinWidth="60dp"
            app:selectionDivider="#E5E5E5"
            app:selectionDividerHeight="1dp"
            app:solidColor="#00000000"
            app:virtualButtonPressedDrawable="#00000000" />

        <com.loper7.date_time_picker.number_picker.NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:tag="np_datetime_second"
            app:internalLayout="@layout/number_picker_with_selector_wheel"
            app:internalMaxHeight="120dp"
            app:internalMinWidth="60dp"
            app:selectionDivider="#E5E5E5"
            app:selectionDividerHeight="1dp"
            app:solidColor="#00000000"
            app:virtualButtonPressedDrawable="#00000000" />
    </LinearLayout>
</LinearLayout>